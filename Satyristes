;; For Satyrographos 0.0.2 series
(version 0.0.2)

;; Library declaration
(library
  ;; Library name
  (name "actuarial")
  ;; Library version
  (version "0.0.1")
  ;; Files
  (sources
    ((packageDir "src")))
  ;; OPAM package file
  (opam "satysfi-actuarial.opam")
  ;; Dependency
  (dependencies
    ((dist ()) ; Standard library
     (base ()) ; Base library
     (azmath ()) ; Math library
    )))

;; Library doc declaration
(libraryDoc
  ;; Library doc name
  (name "actuarial-doc")
  ;; Library version
  (version "0.0.1")
  ;; Working directory to build docs
  (workingDirectory "doc")
  ;; Build commands
  (build
    ;; Run SATySFi
    ((satysfi "manual.saty" "-o" "manual.pdf")))
  ;; Files
  (sources
    ((doc "manual.pdf" "doc/manual.pdf")))
  ;; OPAM package file
  (opam "satysfi-actuarial-doc.opam")
  ;; Dependency
  (dependencies
    ((actuarial ()) ; the main library
     (dist ()) ; Standard library
     (base ()) ; Base library
     (easytable ()) ; Table library
     (enumitem ()) ; List library
     (code-printer ()) ; Code Printing library
     (bibyfi ()) ; Bibliography library
    )))
